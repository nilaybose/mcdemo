pipeline {
    agent any
    stages {
    	environment {
        	DOCKER_HUB  = credentials('docker_hub')
    	}
        stage('Build') {
            steps {
                sh './gradlew build'
            }
        }
        stage('Docker'){
            steps{
            	sh '/usr/local/bin/docker build -t nilaybose/mkubedemo:latest .'           	
            	sh '/usr/local/bin/docker login -u $DOCKER_HUB_USR -p $DOCKER_HUB_PWD https://index.docker.io/v1/'
            	sh '/usr/local/bin/docker push nilaybose/mkubedemo:latest'           	
           }
        }
        stage('Deploy V1') {
            steps {
                sh '/usr/local/bin/kubectl create -f ./v1_deploy.yaml --record'
            }
        }
    }
}


