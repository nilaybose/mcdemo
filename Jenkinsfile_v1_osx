pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'export PATH=/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin'
                sh 'echo $PATH'
                sh 'echo $PWD'
                sh './gradlew build'
            }
        }
        stage('Docker') {
            steps {
            	script {
                	docker.build "nilaybose/mkubedemo:latest"
      				withDockerRegistry([ credentialsId: "gitdocker", url: "" ]) {
      					 sh 'docker push nilaybose/mkubedemo:latest'
      				}
                }
           }
        }
        stage('Deploy V1') {
            steps {
                sh 'kubectl create -f ./v1_deploy.yaml --record'
            }
        }
    }
}


